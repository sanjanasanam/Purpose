<%- include("../partials/header") %>
    <link rel="stylesheet" type="text/css" href="stylesheets/home.css" />
</head>
<body >
    <%- include("../partials/nav") %>
    <div class="search">
        <h1 id="heading">Browse a question</h1>
        <form action="/questions/filter" method="POST">
            <i class='bx2 bx bx-search-alt-2'></i>
            <input autocomplete="off" type="search" name="filter" id="search" placeholder="Search Your Query">
        </form>
        <div class="buttons">
            <a href="/questions/filter/answered" class="button">Answered</a>
            <a href="/questions/filter/pending" class="button">Pending</a>
            <a href="/questions/new" class="button">Post a question</a>
        </div>
    </div>

    <hr>

    <h3 class="heading-3">Trending Questions</h3>
    <section>
        <div class="questions">
            <% questions.forEach(function(question){ %>
                <div class="boxes">
                    <h4><%= question.author.username %>,<span class="light"> <%- moment(question.createdAt).fromNow() %></span></h4>
                    <p class="box"><%= question.description %></p>
                    <a href="/questions/<%= question._id %>"><button class="btn">Answers</button></a>
                    <% if(currUser && currUser.username === question.author.username || currUser && currUser.isAdmin){ %>
                        <a href="/questions/<%= question._id %>/edit" class="edit">Edit</a>
                        <form class="delForm" action="/questions/<%= question._id %>?_method=DELETE" method="POST">
                            <button class="del" type="submit">Delete</button>
                        </form>
                    <% } %>
                </div>
            <% }) %>
        </div>
    </section>
    <!--SCROLL REVEAL-->
    <script src="https://unpkg.com/scrollreveal"></script>

    <!-- MAIN JS -->
    <script src="assets/js/main.js"></script>

    <script type="text/javascript" src="JS/home.js"></script>
<%- include("../partials/footer") %>

